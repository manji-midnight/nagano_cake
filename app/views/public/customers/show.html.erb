<div class="container">
  
  <div class="col-lg-10 col-xl-8 mx-auto">
    <div class="row mb-3">
      <div class="col-12">
        <h3 class="mb-4">マイページ</h3>
        <div class="row mb-3">
          <div class="col-6 col-sm-4 col-md-3 d-flex align-items-center">
            <h5>登録情報</h5>
          </div>
          <div class="col-6 col-sm-4 col-md-3">
            <%= link_to "編集する", edit_customers_path, class:"btn btn-success btn-block" %>
          </div>
        </div>
        <table class="table table-bordered">
          <tr>
            <th class="table-active">氏名</th>
            <td><%= @customer.last_name + @customer.first_name %></td>
          </tr>
          <tr>
            <th class="table-active">カナ</th>
            <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th class="table-active">郵便番号</th>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <th class="table-active">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="table-active">電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th class="table-active">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-6 col-sm-4 col-md-3 d-flex align-items-center">
        <h5>配送先</h5>
      </div>
      <div class="col-6 col-sm-4 col-md-3">
        <%= link_to "一覧を見る", shippings_path, class:"btn btn-primary btn-block" %>
      </div>
    </div>

    <div class="row">
      <div class="col-6 col-sm-4 col-md-3 d-flex align-items-center">
        <h5>注文履歴</h5>
      </div>
      <div class="col-6 col-sm-4 col-md-3">
        <%= link_to "一覧を見る", orders_path, class:"btn btn-primary btn-block" %>
      </div>
    </div>

  </div>
</div>