<div class="container">
  <%#= render "shared/flash_message" %>
  <div class="row">
    <div class="col-md-10 col-lg-9 col-xl-8 mx-auto">
      <h2 class="mb-4 ml-md-n2">会員情報編集</h2>
      <%= form_with model: @customer, url: customers_update_path, local:true do |f| %>
        <%#= render 'shared/form_error', model: @customer %>
        <div class="form-group row">
          <%= f.label :first_name, "氏名", class: "col-form-label col-md-4" %>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :first_name, "フリガナ", class: "col-form-label col-md-4" %>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :last_name_kana, class: "form-control" %>
          </div>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :postcode, "郵便番号", class: "col-form-label col-md-4" %>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :postcode, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :address, "住所", class: "col-form-label col-md-4" %>
          <div class="col-md-8">
            <%= f.text_area :address, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :phone_number, "電話番号", class: "col-form-label col-md-4" %>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :phone_number, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-form-label col-md-4" %>
          <div class="col-sm-6 col-md-4">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-6 col-md-4 offset-md-4">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </div>
          <div class="col-6 col-md-4 text-right">
            <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>