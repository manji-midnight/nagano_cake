<div class="container">

  <div class="row">
    <div class="col-md-10 col-lg-9 col-xl-8 mx-auto">
      <h2 class="mb-4">新規会員登録</h2>

      <%= form_with model: @customer, url: customer_registration_path, local: true, class: "mb-3 pl-md-3" do |f| %>

        <div class="form-group row">
          <%= f.label "名前", class: "col-md-4 col-form-label" %>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :last_name, autofocus: true,  placeholder: "(姓) 卍", class:"form-control" %>
          </div>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :first_name, autofocus: true,  placeholder: "(名) 太郎", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :last_name_kana, "フリガナ", class: "col-md-4 col-form-label" %>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :last_name_kana, autofocus: true,  placeholder: "(セイ) マンジ", class:"form-control" %>
          </div>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :first_name_kana, autofocus: true,  placeholder: "(メイ)タロウ", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-md-4 col-form-label" %>
          <div class="col-sm-6 col-md-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :postcode, "郵便番号（ハイフンなし）", class: "col-md-4 col-form-label" %>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :postcode, autofocus: true, placeholder: "00000000", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :addres, "住所", class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.text_area :address, autofocus: true, placeholder: "大阪府大阪市中央区0-0", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :phone_number, "電話番号（ハイフンなし）", class: "col-md-4 col-form-label" %>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, "パスワード（６文字以上）", class: "col-md-4 col-form-label" %>
          <div class="col-sm-6 col-md-4">
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, "パスワード（確認用）", class: "col-md-4 col-form-label" %>
          <div class="col-sm-6 col-md-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-7 text-right">
            <%= f.submit "新規登録", class:"btn btn-success" %>
          </div>
        </div>
      <% end %>

      <h4 class="mb-3">既に登録済みの方</h4>
      <p class="pl-3"><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>
    </div>
  </div>
</div>


