<h1>ショッピングカート</h1>
<p>カートを空にする</p>

<table border="1">
  <tr>
    <td>商品名</td>
    <td>単価（税込）</td>
    <td>数量</td>
    <td>小計</td>
    <td></td>
  </tr>
  <tr>
    <% @cart_products.each do |f| %>
    <td>画像：<%= f.name %></td>
    <td><%= f.price %></td>
    <td><%= f.quantity %></td>
    <td><%= f.price*f.quantity %></td>
    <td><%= link_to"削除する", public_cart_product_path, method: :delete %></td>
  </tr>
  <% end %>
</table>

<p><%= link_to "買い物を続ける", public_products_path %></p>
