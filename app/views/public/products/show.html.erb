<div class="container px-5 px-sm-0">
  <div class="row m-5">

    <div class="col-lg-5">
      <%= attachment_image_tag @product, :image %>
    </div>

    <div class="col-lg-7">
      <p><%= @product.name %></p>
      <p><%= @product.description %></p>
      <p><%= @product.add_tax_price.to_s(:dalimited) %></p>
      <p><%= @product.is_active %>(税込)</p>
          <%= form_with model:@cart_product, url:cart_products_path, local: true do |f| %>
            <%= f.select :quantity, options_for_select((1..20).to_a), include_blank: "個数選択" %>
            <%= f.submit "カートに入れる" %>
          <% end %>
    </div>

  </div>
</div>