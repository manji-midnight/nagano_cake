<div class="container px-5 px-sm-0">
  <div class="row m-5 p-5">

    <div class="col-md-5">
      <%= attachment_image_tag @product, :image, format: 'jpeg', size: "300x220" %>
    </div>

    <div class="col-md-7">
      <div class="row my-2">
        <h3 class="font-weight-bold"><%= @product.name %></h3>
      </div>

      <div class="row mb-5">
        <%= @product.description %>
      </div>

      <div class="row mb-3 d-flex align-items-end">
      <h3>¥<%= @product.add_tax_price.to_s(:dalimited) %></h3><p>(税込)</p>
      </div>

      <div class="row">
        <%= form_with model:@cart_product, url:cart_products_path, local: true do |f| %>
          <%= f.select :quantity, options_for_select((1..20).to_a), include_blank: "個数選択" %>
          <%= f.hidden_field :product_id, value: @product.id %>
          <%= f.submit "カートに入れる", class:"btn btn-success" %>
        <% end %>
      </div>


    </div>

  </div>
</div>


