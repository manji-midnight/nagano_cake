<div class="container px-5 px-sm-0">
  <div class="row mt-5 mb-5 ml-1">
    <h2 class="font-weight-normal">商品一覧(全<%= @products.count %>件)</h2>
  </div>
  
  <div class="row d-flex flex-wrap pl-5">
    <% @products.each do |product| %>
      <% if product.is_active == true %>
      <div class="mx-4">
        <table>
          <tr><td><%= attachment_image_tag product, :image, format: 'jpeg', size: "200x160" %></td></tr>
          <tr><td><%= link_to product.name, "/products/#{product.id}" %></td></tr>
          <tr><td>¥<%= product.price %></td></tr>
        </table>
      </div>
      
      <% end %>
    <% end %>
  </div>
  
  <div class="row m-4">
    <div class="mx-auto"><%= paginate @products %></div>
  </div>
    
</div>

