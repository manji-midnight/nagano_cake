<div class="container px-5 px-sm-0">
  <div class="row m-5">
        <h2>商品一覧</h2>
        <p>(全<%= Product.count %>件)</p>
        <% @products.each do |product| %>
        <div>
            <table>
                <tr><td><%= attachment_image_tag product, :image, :fill, 50, 50 %></td></tr>
                <tr><td><%= link_to product.name, "/products/#{product.id}" %></td></tr>
                <tr><td><%= product.add_tax_price.to_s(:dalimited) %></td></tr>
            </table>
        </div>
        <% end %>
        
  </div>
</div>

<%= paginate @products %>