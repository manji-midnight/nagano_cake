<h3>注文履歴一覧</h3>
<h4>注文情報</h4>
<table border="1">
  <tr><th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
  <tr><th>配送先</th><td>〒<%= @order.postcode %><%= @order.address %></td></tr>
  <tr><th>支払方法</th><td><%= @order.payment_method %></td></tr>
  <tr><th>ステータス</th><td><%= @order.order_status %></td></tr>
</table>

<h4>請求情報</h4>
<table border="1">
  <tr><th>商品合計</th><td><%= @order.order_status %></td></tr>
  <tr><th>配送料</th><td><%= @order.shipping_fee %></td></tr>
  <tr><th>ご請求額</th><td><%= @order.total_price. %>円</td></tr>
</table>

<h4>注文内容</h4>
<table border="1">
  <tr>
    <td>商品</td>
    <td>単価（税込）</td>
    <td>個数</td>
    <td>小計</td>
  </tr>

  <tr>
    <% @order_details.each do |f| %>
    <td><%= f.name %></td>
    <td><%= f.taxed_price.to_s %></td>
    <td><%= f.quantity.to_s %></td>
    <td><%= f.taxed_price*f.quantity.to_s %>円</td>
  </tr>
  <% end %>
</table>