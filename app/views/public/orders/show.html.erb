<h3>注文履歴一覧</h3>
<h4>注文情報</h4>
<table border="1">
  <tr><th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
  <tr><th>配送先</th><td>〒<%= @order.postcode %><%= @order.address %></td></tr>
  <tr><th>支払方法</th><td><%= @order.payment_method %></td></tr>
  <tr><th>ステータス</th><td><%= @order.order_status %></td></tr>
</table>

<h4>請求情報</h4>
<table border="1">
  <tr><th>商品合計</th><td>煌タロウ</td></tr>
  <tr><th>配送料</th><td>煌タロウ</td></tr>
  <tr><th>ご請求額</th><td>煌タロウ</td></tr>
</table>

<h4>注文内容</h4>
<table border="1">
  <tr>
    <% @orders.each do |f| %>
    <td>画像：<%= f.created_at.strftime('%Y/%m/%d') %></td>
    <td>〒<%= f.postcode %><%= f.address %></td>
    <td><%= f.nam %></td>
    <td><%= f.total_price %>円</td>
    <td><%= f.order_status %></td>
    <td><%= link_to"注文詳細", public_order_path(order.id) %></td>
  </tr>
  <% end %>
</table>