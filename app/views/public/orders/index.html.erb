<div class="container px-5 px-sm-0">
  <div class="row m-5">
    <h4 class="font-weight-normal">注文履歴一覧</h4>
    <table class="table table-hover table-invers">
      <thead>
        <div class="notice text-danger">
  　　      <% if @notice %>
            <%= @notice %>
          <% end %>
        </div>
        <tr>
          <td>購入日</td>
          <td>配送先</td>
          <td>注文商品</td>
          <td>支払金額</td>
          <td>ステータス</td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @orders.each do |order| %>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>〒<%= order.postcode %><%= order.address %></td>
          <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.product.name %>
            <% end %>
          </td>
          <td><%= order.total_price %></td>
          <td><%= order.order_status %></td>
          <td><%= link_to"注文詳細", order_path(order) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div