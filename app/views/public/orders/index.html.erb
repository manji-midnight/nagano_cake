<div class="container px-5 px-sm-0">
    <div class="row m-5">
        <h4 class="font-weight-normal">注文履歴一覧</h4>
        <table class="table table-hover table-invers">
          <thead>
        <div class="notice text-danger">
        <% if @notice %>
          <%= @notice %>
        <% end %>
            <tr>
    <td>購入日時</td>
    <td>購入者</td>
    <td>注文個数</td>
    <td>支払金額</td>
    <td>注文ステータス</td>
    <td></td>
  　　　　　　　</tr>
          </thead>
          <tbody>
    <% @orders.each do |f| %>
    <td>画像：<%= f.created_at.strftime('%Y/%m/%d') %></td>
    <td>〒<%= f.postcode %><%= f.address %></td>
    <td><%= f.name %></td>
    <td><%= f.total_price %></td>
    <td><%= f.order_status %></td>
    <% case order.order_status %>
    <% when 0 %>
    入金待ち
    <% when 1 %>
    入金確認
    <% when 2  %>
    制作中
    <% when 3 %>
    発送準備中
    <% when 4 %>
    発送済
    <% end %>
    
    <td><%= link_to"注文詳細", order_path(order.id) %></td>
  </tr>
  <% end %>
  </tbody>
</table>
   <div class="pagination justify-content-center">
          <%#= paginate @order %>
   </div>
      </div>
   </div>
</div>