<div class="container">

  <div class="row m-5">
    <div class="col-md-10 col-lg-9 col-xl-8 mx-auto">
      <div class="row mb-5 p-2">
        <h3>注文情報入力</h3>
      </div>

      <%= form_with model: @order, local: true do |f| %>

      <div class="form-group row">
        <%= f.label "支払方法", class: "col-md-4 col-form-label" %>
          <div class="col-md-4">
            <%= f.radio_button :payment_method, :true, checked: true %>
            <%= f.label :is_active, "クレジットカード", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :payment_method, :false %>
            <%= f.label :is_active, "銀行振込", {value: :false, style: "display: inline-block;"} %>
          </div>
          <%= f.hidden_field :cart_product_id, value: @cart_product.id %>
          <div class="col-md-4">
            <%= f.radio_button :add, :true, checked: true %>
            <%= f.label :is_active, "クレジットカード", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :payment_method, :false %>
            <%= f.label :is_active, "銀行振込", {value: :false, style: "display: inline-block;"} %>
          </div>
      </div>

      <div class="form-group row mt-5">
          <div class="col-7 text-right">
            <%= f.submit '新規登録', class:"btn btn-success" %>
          </div>
      </div>

      <% end %>

    </div>
  </div>
</div>