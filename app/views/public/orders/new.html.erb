<div class="container">
  <div class="row m-5">
    <div class="col-md-10 col-lg-9 col-xl-8 mx-auto">
      <div class="row mb-3">
        <h3>注文情報入力</h3>
      </div>
      <div class="row">
        <%= form_with model: @order, url: orders_comfirm_path, data: {"turbolinks"=>false}, class:"form-horizontal", local: true do |f| %>
          <div>
            <%= f.label "支払方法", class: "col-md-4 col-form-label" %>
          </div>
          <div class="mx-5">
            <div>
              <%= f.radio_button :payment_method, :true, checked: true %>
              <%= f.label :is_active, "クレジットカード", {value: :true, style: "display: inline-block;"} %>
            </div>
            <div>
              <%= f.radio_button :payment_method, :false %>
              <%= f.label :is_active, "銀行振込", {value: :false, style: "display: inline-block;"} %>
            </div>
          </div>
          
        <div class="row ml-1">
            <%= f.label "お届け先", class: "col-md-4 col-form-label" %>
          <div class="mx-5">
            <div>
              <%= f.radio_button :shipping_address, :"1" %>
              <%= f.label :shipping_address, "ご自身の住所" %><br>
              <%= current_customer.postcode %>
              <%= current_customer.address %><br>
              <%= current_customer.last_name %>
              <%= current_customer.first_name %>
            </div>
            <div>
              <%= f.radio_button :shipping_address, :"2" %>
              <%= f.label :shipping_address, "登録済住所" %>
              <%= f.collection_select :shipping_address_id, current_customer.shippings, :id, :shipping_address %>
            </div>
            <div>
              <%= f.radio_button :shipping_address, :"3" %>
              <%= f.label :shipping_address, "新しいお届け先" %>
            </div>
            <div class="form-group">
              <div>
                <label>郵便番号(ハイフンなし)</label>
                <%= f.text_field :postcode %>
              </div>
              <div>
                <label class="label">住所</label>
                <%= f.text_field :address, class:"input" %>
              </div>
              <div>
                <label class="label">宛名</label>
                <%= f.text_field :name %>
              </div>
              <div class="col-4 offset-md-4 mt-5">
                <%= f.submit '確認画面へ進む', class:"btn btn-success" %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
