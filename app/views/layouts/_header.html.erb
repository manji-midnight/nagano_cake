<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <div class="container">
      <a class="navbar-brand">
        <% if admin_signed_in? %>
        <%= link_to "ながのCake", admin_root_path, class: "navbar-brand" %>
        <% else %>
        <%= link_to "ながのCake", root_path, class: "navbar-brand" %>
        <% end %>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>
          <!--カスタマーがログインしている時-->
            <li class="header-name">
              ようこそ、<%= current_customer.first_name %>さん！
            </li>
            <li><%= link_to "マイページ", customers_path(current_customer), class: "nav-link" %></li>
            <li><%= link_to "商品一覧", products_path, class: "nav-link" %></li>
            <li><%= link_to "カート", cart_products_path, class: "nav-link" %></li>
            <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link" %></li>

          <% elsif admin_signed_in? %>
          <!--管理者がログインしている時-->
            <li><%= link_to "商品一覧", admin_products_path, class: "nav-link" %></li>
            <li><%= link_to "会員一覧", admin_customers_path, class: "nav-link" %></li>
            <li><%= link_to "注文履歴一覧", admin_orders_path, class: "nav-link" %></li>
            <li><%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link" %></li>
            <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %></li>

          <% else %>
          <!--ログインしていない時-->
            <li><%= link_to "About", homes_about_path, class: "nav-link" %></li>
            <li><%= link_to "商品一覧", products_path, class: "nav-link" %></li>
            <li><%= link_to "新規登録", new_customer_registration_path, class: "nav-link" %></li>
            <li><%= link_to "ログイン", new_customer_session_path, class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>