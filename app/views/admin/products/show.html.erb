<div class="container px-5 px-sm-0">
  <div class="row m-5 p-5">

    <div class="col-md-5">
      <%= attachment_image_tag @product, :image, format: 'jpeg', size: "300x220" %>
    </div>
    
    <div class="col-md-7">
      
      <table>
        <thead>
          <tr>
            <td style="width: 40%">商品名</td>
            <td style="width: 5%"></td>
            <td style="width: 55%"><%= @product.name %></td>
          <tr>
            
            <td>商品説明</td>
            <td></td>
            <td><%= @product.description %></td>
          </tr>
          
          <tr>
            <td>ジャンル</td>
            <td></td>
            <td><%= @product.genre.name %></td>
          </tr>
          
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td></td>
            <td><%= @product.add_tax_price.to_s(:taxed_price) %>円(<%= @product.price%>円)</td>
          </tr>
          
          <tr>
            <td>販売ステータス</td>
            <td></td>
            <td>
              <% if @product.is_active == true %>
              　<font color="green">販売中</font>
              <% else %>
                <font color="#C0C0C0">販売停止中</font>
              <% end %>
            </td>
          </tr>
        </thead>
      </table>
      

      <div class="row">
        <div class="ml-5 mt-5">
          <%= link_to "編集する", edit_admin_product_path(@product) ,class:'btn btn-success' %>
        </div>
      </div>
      
      
    </div>

  </div>
</div>
  
