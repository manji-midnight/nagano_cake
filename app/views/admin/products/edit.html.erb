<div class="container">
  
  <div class="row m-5">
    <div class="col-md-10 col-lg-9 col-xl-8 mx-auto">
      <div class="row mb-5 p-2">
        <h3>商品編集</h3>
      </div>
        
      <%= form_with model: @product, url: admin_product_path, local: true do |f| %>
      
      <div class="form-group row">
        <%= f.label "商品画像", class: "col-md-4 col-form-label" %>
          <div class="col-md-4">
            <%= f.attachment_field :image, placeholder: "ファイルを選択" %>
          </div>
      </div>
      
      <div class="form-group row">
        <%= f.label "商品名", class: "col-md-4 col-form-label" %>
          <div class="col-md-4">
            <%= f.text_field :name ,placeholder: "商品名", :size=>"40" %>
          </div>
      </div>
      
      <div class="form-group row">
        <%= f.label "商品説明", class: "col-md-4 col-form-label" %>
          <div class="col-md-4">
            <%= f.text_area :description ,placeholder: "ここに説明文を記述します", :size=>"39x6" %>
          </div>
      </div>
      
      <div class="form-group row">
        <%= f.label "ジャンル", class: "col-md-4 col-form-label" %>
          <div class="col-md-4">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
          </div>
      </div>
      
      <div class="form-group row d-flex flex-row">
        <%= f.label "税抜価格", class: "col-md-4 col-form-label" %>
          <div class="col-md-6">
            <%= f.text_field :price ,placeholder: "1000", :size=>"40" %>
          </div>
          <label class="col-md-2">円</label>
      </div>
      
      <div class="form-group row">
        <%= f.label "販売ステータス", class: "col-md-4 col-form-label" %>
          <div class="col-md-4">
            <%= f.radio_button :is_active, :true, checked: true %>
            <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
          </div>
      </div>
      
      <div class="form-group row mt-5">
          <div class="col-7 text-right">
            <%= f.submit '変更を保存', class:"btn btn-success" %>
          </div>
      </div>
      
      <% end %>
        
    </div>
  </div>
</div>