<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 offset-md-2">
      <h3>商品新規登録</h3>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_with model: @product, url: admin_products_path, local: true do |f| %>
        <p>
          商品画像
          <%= f.attachment_field :image, placeholder: "ファイルを選択" %>
        </p>
        <p>
          商品名
          <%= f.text_field :name %>
        </p>
        <p>
          商品説明
          <%= f.text_area :description %>
        </p>
        <p>
          ジャンル
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
        </p>
        <p>
          税抜価格
          <%= f.text_field :price %>円
        </p>
        <p>
          販売ステータス
          <%= f.radio_button :is_active, :true, checked: true %>
          <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %><br>
        </p>
        <%= f.submit '新規登録' %>
      <% end %>
    </div>
  </div>
</div>