<div class="container px-5 px-sm-0">
  
  <div class="row">
    <div class="col-md-10 col-lg-9 col-xl-8 mx-auto">
        <h2>商品新規登録</h2>
        
        <%= form_with model: @product, url: admin_products_path, local: true do |f| %>
        
        <div class="form-group row">
          <%= f.label "商品名", class: "col-md-4 col-form-label" %>
            <div class="col-md-4">
              <%= f.attachment_field :image, placeholder: "ファイルを選択" %>
            </div>
        </div>
        
        <div class="form-group row">
          <%= f.label "商品説明", class: "col-md-4 col-form-label" %>
            <div class="col-md-4">
              <%= f.text_area :description %>
            </div>
        </div>
        
        <div class="form-group row">
          <%= f.label "ジャンル", class: "col-md-4 col-form-label" %>
            <div class="col-md-4">
              <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
            </div>
        </div>
        
        <div class="form-group row">
          <%= f.label "税抜価格", class: "col-md-4 col-form-label" %>
            <div class="col-md-4">
              <%= f.text_field :price %>円
            </div>
        </div>
        
        <div class="form-group row">
          <%= f.label "販売ステータス", class: "col-md-4 col-form-label" %>
            <div class="col-md-4">
              <%= f.radio_button :is_active, :true, checked: true %>
              <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-7 text-right">
              <%= f.submit '新規登録', class:"btn btn-success" %>
            </div>
        </div>
        
        <% end %>
        
    </div>
  </div>
</div>