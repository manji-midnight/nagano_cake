<div class="container px-5 px-sm-0">
  <div class="row m-5">
        <h3 class="font-weight-normal">商品一覧<%= @book.book_comments.count %></h2>
        
        <table class="table table-hover table-invers">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.id %></td>
                <td><%= link_to product.name, "/products/#{product.id}" %></td>
                <td><%= product.price %></td>
                <td><%= product.jenre.id %></td>
                <td><%= product.is_active %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
    </div>
</div>