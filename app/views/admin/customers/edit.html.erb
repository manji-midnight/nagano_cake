<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-9 col-xl-8 mx-auto">
      <div class="col-md-5 text-center mx-auto mb-3">
        <h2 class="mb-4"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報</h2>
      </div>
      <%= form_with model: @customer, url: admin_customer_path, local: true, class: "mb-3 pl-md-3" do |f| %>
      
      <div class="form-group">
        <%= f.label :会員id %>
        <%= f.label :"#{@customer.id}" %>
      </div>
      
      <div class="form-group row">
        <%= f.label "氏名", class: "col-md-4 col-form-label" %>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :last_name, autofocus: true,  placeholder: "", class:"form-control" %>
        </div>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :first_name, autofocus: true,  placeholder: "", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :last_name_kana, "フリガナ", class: "col-md-4 col-form-label" %>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :last_name_kana, autofocus: true,  placeholder: "", class:"form-control" %>
        </div>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :first_name_kana, autofocus: true,  placeholder: "", class:"form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :postcode, "郵便番号", class: "col-md-4 col-form-label" %>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :postcode, autofocus: true, placeholder: "", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :addres, "住所", class: "col-md-4 col-form-label" %>
        <div class="col-md-8">
          <%= f.text_area :address, autofocus: true, placeholder: "", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :phone_number, "電話番号", class: "col-md-4 col-form-label" %>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :phone_number, autofocus: true, placeholder: "", class:"form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :email, "メールアドレス", class: "col-md-4 col-form-label" %>
        <div class="col-sm-6 col-md-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "", class:"form-control" %>
        </div>
      </div>
        
      <div class="form-group row">
        <%= f.label :delete_user, "会員ステータス", class: "col-md-4 col-form-label" %>
        <%= f.radio_button :delete_user, false %>
        <%= f.label :user_status, "有効" %>
        <%= f.radio_button :delete_user, true %>
      　<%= f.label :user_status, "退会" %>
      <div class="col-sm-6 col-md-4"></div>
      <div class="form-group row">
        <div class="col-7 text-right">
          <%= f.submit "変更を保存する", class:"btn btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>