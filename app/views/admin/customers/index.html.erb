<div class="container px-5 px-sm-0">
  <div class="row m-5">
        <h4 class="font-weight-normal">会員一覧</h4>

        <table class="table table-hover table-invers">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
              <td class="align-middle"><%= customer.id %></td>
              <td class="align-middle"><u><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), class:"font-weight-bold" %></u></td>
              <td class="align-middle"><%= customer.email %></td>
              <td class="align-middle">
                <% if customer.delete_user == false %>
                  <p class="text-success font-weight-bold">有効</p>
                <% else %>
                  <p class="text-secondary">退会</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>