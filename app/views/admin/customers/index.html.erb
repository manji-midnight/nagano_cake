<div class="container px-5 px-sm-0">
  <div class="row m-5">
        <h2 class="font-weight-normal">会員一覧</h2>

        <table class="table table-hover table-invers">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td><%= customer.name %></td>
                <td><%= customer.email %></td>
                <td><%= customer.delete_user %></td>
                <td><%=link_to "編集する",edit_admin_customers_path(customer.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
    </div>
</div>