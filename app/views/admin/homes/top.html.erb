<div class="container px-5 px-sm-0">
  <div class="row m-5">
    <h2 class="font-weight-normal">注文履歴一覧</h2>

    <table class="table table-hover table-invers">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
          <td><%= order.customer.full_name %></td>
          <td><%= order.order_details.sum(:quantity) %></td>
          <td><%= order.order_status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row m-4">
    <div class="mx-auto"><%= paginate @orders %></div>
  </div>
</div>