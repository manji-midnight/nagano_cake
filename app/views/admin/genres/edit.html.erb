<div class="container">
  
  <div class="row m-5">
    <div class="row">
      <h4>ジャンル編集</h4>
    </div>
  </div>
  
    <div class="row m-5 form-group">
      <%= form_with model: @genre , url: admin_genre_path, data: {"turbolinks"=>false}, local: true do |f| %>
      <%= f.label "ジャンル名" %>
      <%= f.text_field :name %>
      <%= f.submit '変更を保存', class:"btn btn-success", data: {"turbolinks"=>false} %>
      <% end %>
    </div>
      
    </div>
  </div>
</div>


